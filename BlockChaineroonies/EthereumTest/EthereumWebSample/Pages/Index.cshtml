@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    <div class="col-md-12">
        <div class="form-group" style="padding-top:20px">
            <label for="usr">Contract Address:</label>
            <input type="text" class="form-control" id="ctrAddress" value="0x454b6e24421c49640aab68f05124aeace6cbbba3" />
        </div>
        <div class="form-group">
            <label for="usr">Number to write:</label>
            <input type="text" class="form-control" id="numberToWrite" />
        </div>
        <button type="button" onclick="submitTrans()">Sign registration</button>

        <div class="form-group" style="padding-top:20px">
            <label for="usr">ResultValue:</label>
            <input readonly type="text" class="form-control" id="resVal" />
        </div>

        <div class="form-group" style="padding-top:20px">
            <label for="sumNumber1">Sum:</label>
            <input type="text" class="form-control" id="sumNumber1" />
            <input type="text" class="form-control" id="sumNumber2" />
        </div>
        <button type="button" onclick="submitSumTrans()">Sum</button>
        <input readonly type="text" class="form-control" id="resultSumValue" />
    </div>

</div>
